    "grammar_file": "./peppa.peg",
    "entry": "grammar",
    "tests": [
      {
        "N": "Left recursion ",
        "I": "x = \"x\" | x \"x\";",
        "O": [
          {
            "slice": [
              0,
              16
            ],
            "type": "grammar",
            "children": [
